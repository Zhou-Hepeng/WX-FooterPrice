.wrapper{
    position:fixed;
    top:0;
    left:0;
    right:0;
    bottom:0;
    overflow: hidden;
}
.location{
    height:100%;
    background-color:#EFEFF4;
}
/*搜索*/
.search{
    position:relative;
    display: flex;
    margin:20rpx;
    padding:0 20rpx;
    justify-content: center;
    align-items: center;
    height:64rpx;
    border-radius: 4rpx;
    background-color:#fff;
}
.search input{
    flex: 1;
    height:40rpx;
    font-size:28rpx;
}
.search text{
    position:absolute;
    top:16rpx;
    right:20rpx;    
    color: #586C94;
    font-size:32rpx;
    font-family: 'detail';
}
/*定位常用*/
.hot-location{

}
.hot-header{
    margin:20rpx 0 10rpx;
    padding-left:30rpx;
    color:#666;
    font-size:28rpx;
}
.hot-content{
    display: flex;
    flex:1;
    padding:20rpx;
    flex-wrap: wrap;
    background-color:#fff;
}
.hot-icon{
    margin-right:8rpx;
    color:#f60;
    font-family: 'detail';
}
.hot-list{
    width: 215rpx;
    height: 60rpx;
    line-height:60rpx;
    text-align: center;
    margin-top: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    margin-left: 10rpx;
    color: #333;
    font-size: 28rpx;
    border:1rpx solid #eee;
    border-radius: 8rpx;
    white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}
/*省份列表*/
.location-model{
    background-color:#fff;
}
.model-header{
    height:72rpx;
    color:#666;
    font-size:28rpx;
    line-height:72rpx;
    padding-left:30rpx;
    background-color:#EFEFF4;
}
.model-list{
    padding-left:30rpx;
}
.model-info{
    height:88rpx;
    color:#333;
    font-size:32rpx;
    line-height:88rpx;
    border-bottom:1px solid #eee;
}
.location-selected{
    color:#f60;
}
.index-nav{
    position:fixed;
    top:0;
    right:0;
    bottom:0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    width:48rpx;
}
.nav-list{
    width:48rpx;
     height:48rpx;
}
.nav-list text{
    display: flex;
    flex: 1;
    color:#999;
    font-size:24rpx;
    line-height:48rpx;
    text-align: center;
    justify-content: center;
    align-items: center;
}
/*城市列表*/
.city-wrapper{
    position:fixed;
    top:0;
    right:0;
    bottom:0;
    width:570rpx;
    transition: right .3s linear;
    box-shadow: -2px 2px 2px 2px #d6d6d6;
    background-color:#fff;
    z-index:15;
}
.city-header{
    position: relative;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 36rpx;
    border-bottom: 1rpx solid #eee;
}
.city-back{
    position: absolute;
    left: 0;
    top: 0;
    width: 88rpx;
    height: 88rpx;
    color: #1571e5;
    font-family: "detail";
}
.city-title{
    color:#000;
    font-size:36rpx;
}
.city-content{
    padding:0 30rpx;
}
.city-list{
    height:90rpx;
    line-height: 90rpx;
    font-size:32rpx;
    border-bottom:1px solid #eee;
}
/*选中的indeNav*/
.index-selected{
    position:fixed;
    left:50%;
    top:50%;
    width:200rpx;
    height:200rpx;
    line-height:200rpx;
    text-align: center;
    margin:-100rpx 0 0 -100rpx;
    font-size: 50px;
    color: #fff;
    border-radius: 8px;
    background-color:rgba(0,0,0,.6);
    transition: opacity .2s ease-out;
}
/*搜索结果列表*/
.search-result{
    position:fixed;
    top:105rpx;
    left:0;
    right:0;
    bottom:0;
    background-color:#EFEFF4;
}
.search-model{
    height:100%;
    padding:0 30rpx;
    background-color:#fff;
}
.result-list{
    height:88rpx;
    line-height:88rpx;
    color:#333;
    font-size:32rpx;
    border-bottom:1px solid #eee;
}