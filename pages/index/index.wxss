/**index.wxss**/
.container{
    padding-bottom:100rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.truck-img > image{
  width:750rpx;
  height:500rpx;
  vertical-align: middle;
}
.import-wrapper{
  padding:30rpx 30rpx 0;
}
.user-name,.user-phone{
  position:relative;
  margin-bottom:30rpx;
}
.user-name > text,.user-phone > text{
  position:absolute;
  top:0;
  left:20rpx;
  color:#f60;
  font-size:28rpx;
  line-height:88rpx;
}
.user-name > input,.user-phone > input{
  height:88rpx;
  line-height:88rpx;
  padding-left:58rpx;
  font-size:28rpx;
  border:1px solid #ddd;
  border-radius:4rpx;
  background-color:#f5f5f5;
}
.select-location{
  position:relative;
  height:88rpx;
  padding:0 30rpx;
  line-height:88rpx;
  color:#333;
  font-size:28rpx;
  border-top:1px solid #eee;
}
.go-location-icon{
  position: absolute;
  right:30rpx;
  top:0;
  height:88rpx;
  line-height:88rpx;
  font-family: 'detail';
  color:#ddd;
}
.select-location > .label{
  color:#f60;
  margin-right:4rpx;
}
.province-name{
  margin-left:30rpx;
}
.city-name{
  margin-left:10rpx;
}
.dealer-header{
  padding:20rpx 30rpx 10rpx;
  color:#999;
  font-size:28rpx;
  background-color:#EFEFF4;
}
.dealer-list{
  display: flex;
  flex-direction:row;
  align-items:center;
  padding:20rpx 0 10rpx 30rpx;
  border-bottom:1px solid #eee;
}
.select-dealer{
  width:36rpx;
  height:36rpx;
  border:1px solid #D8D8D8;
  box-sizing: border-box;
}
.seleceed-dealer{
  width:36rpx;
  height:36rpx;
  margin-top:-1rpx;
  margin-left:-1rpx;
}
.vip-dealer{
  width:28rpx;
  height:28rpx;
  margin-left:5rpx;
  vertical-align: middle;
}
.dealer-info{
  margin-left:20rpx;
}
.dealer-name{
  display: flex;
  flex-direction:row;
  color:#333;
  font-size:32rpx;
  line-height: 32rpx;
}
.dealer-address{
  color:#999;
  font-size:24rpx;
}
/*参数配置*/
.parameter-header{
  height:80rpx;
  padding-left:30rpx;
  line-height:80rpx;
  font-size:32rpx;
  font-weight: bold;
  border-top:20rpx solid #EFEFF4;
  border-bottom:1px solid #eee;
}
.parameter-nav{
  height:88rpx;
  padding:0 30rpx;
  line-height:88rpx;
  white-space:nowrap;
}
.parameter-nav-list{
  display: inline-block;
  margin-right:50rpx;
  height:83rpx;
  line-height: 83rpx;
  color:#333;
  font-size:28rpx;
}
.parameter-selected{
  color:#586C94;
  border-bottom:4rpx solid #586C94;
  box-sizing: border-box;
}
.parameter-content{
  border-top:1px solid #e5e5e5;
}
.parameter-list{

}
.parameter-info-list{
  display: flex;
  flex-direction:row;
  border-bottom:1px solid #e5e5e5;
}
.parameter-key{
  width:170rpx;
  color:#333;
  font-size:28rpx;
  line-height:82rpx;
  text-align: center;
  border-right:1px solid #e5e5e5;
  background-color:#F9F9F9;
}
.parameter-value{
  display: flex;
  flex:1;
  padding-left:20rpx;  
  line-height:80rpx;
  color:#333;
  font-size:28rpx;
}
/*个人信息保护声明*/
.statement{
  display: flex;
  flex:1;
  height:88rpx;
  padding-left:30rpx;
  color:#666;
  font-size:28rpx;
  line-height:88rpx;
  /*justify-content: center;*/
  align-items: center;
  border-top:20rpx solid #EFEFF4;
  border-bottom:20rpx solid #EFEFF4;
}
.select-statement{
  width:28rpx;
  height:28rpx;
  line-height:28rpx;
  margin-right:10rpx;
  border:1px solid #d8d8d8;
  box-sizing: border-box;
}
.selected-statement{
  width:28rpx;
  height:28rpx;
  margin-top:-1rpx;
  margin-left:-1rpx;
}
.statement-info{
  margin-left:10rpx;
  color:#1571e5;
}
/*询底价按钮*/
.footer-price-button{
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  height:100rpx;
  color:#fff;
  font-size:32rpx;
  text-align: center;
  line-height:100rpx;
  background-color:#f60;
}